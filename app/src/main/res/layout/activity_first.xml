<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/inputDec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Onluk Sayı Giriniz"
        android:inputType="number"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/SelectorDec"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/inputDec"
        android:entries="@array/base_options"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/convertButtonDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SelectorDec"
        android:text="Dönüştür"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/resultTextDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/convertButtonDec"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Bu bir XML dosyasıdır ve arka planda kullanıcı bilgilerini tutar -->

    <EditText
        android:id="@+id/inputMB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="1dp"
        android:hint="Megabyte Giriniz"
        android:inputType="numberDecimal" />
    <Spinner
        android:id="@+id/conversionTypeSpinnerMB"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/inputMB"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="1dp"
        android:entries="@array/conversion_types" />


    <TextView
        android:id="@+id/resultTextMB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/convertButtonMB"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/convertButtonMB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/conversionTypeSpinnerMB"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:text="Dönüştür" />








    <!-- Bu bir XML dosyasıdır ve arka planda kullanıcı bilgilerini tutar -->

    <EditText
        android:id="@+id/editTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/convertButtonMB"
        android:inputType="numberDecimal"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/textViewInput"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/editTextInput"
        android:text="Giriş Değeri:"
        android:textSize="18sp" />


    <RadioGroup
        android:id="@+id/radioGroupConversion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textViewInput"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonFahrenheit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Fahrenheit" />

        <RadioButton
            android:id="@+id/radioButtonKelvin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelvin" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/radioGroupConversion"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:text="Dönüştür" />



    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonConvert"
        android:layout_centerInParent="true"
        android:layout_marginTop="3dp" />


</RelativeLayout>
